generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Venue {
  id            Int      @id @default(autoincrement())
  name          String
  description   String
  location      String
  pricePerNight Float
  capacity      Int
  imageUrl      String?
  bookings      BookingInquiry[]
}

model BookingInquiry {
  id            Int      @id @default(autoincrement())
  venueId       Int
  venue         Venue    @relation(fields: [venueId], references: [id])
  companyName   String
  email         String
  startDate     DateTime
  endDate       DateTime
  attendeeCount Int
  createdAt     DateTime @default(now())
}
