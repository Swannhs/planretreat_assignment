{
    "name": "api-service",
    "version": "1.0.0",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "prisma:generate": "prisma generate",
        "prisma:push": "prisma db push",
        "prisma:seed": "ts-node prisma/seed.ts",
        "test": "jest",
        "postinstall": "prisma generate && prisma db push && npm run prisma:seed"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "dependencies": {
        "@prisma/client": "^5.0.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.18.0",
        "helmet": "^7.0.0",
        "prisma": "^5.0.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "zod": "^3.0.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.0",
        "@types/express": "^4.17.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^20.0.0",
        "@types/supertest": "^6.0.3",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "jest": "^30.2.0",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.0.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.0.0"
    }
}
